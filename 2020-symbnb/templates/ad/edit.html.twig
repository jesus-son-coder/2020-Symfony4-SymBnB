{% extends 'base.html.twig' %}

{% block title %}Modification d'une annonce{% endblock %}

{% form_theme form 'ad/partials/_collection.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Modifier l'annonce : <small>{{ ad.title }}</small></h1>

        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Modifier l'annonce</button>
        {{ form_end(form) }}

    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/ad.js') }}" ></script>
{% endblock %}